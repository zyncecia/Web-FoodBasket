    <a asp-page="Create">Sign Up</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Basket[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Basket[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Basket[0].ContactNo)
            </th>
            <th>
